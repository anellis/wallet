<h1>Transactions</h1>

<h3> Total </h3>
<p>Your total is <%= number_to_currency(@balance) %></p>
<p><%= if @balance < 0
        "I feel bad for you. Please make more money."
      end
    %></p>


<table>
  <thead>
    <tr>
      <th>Transactions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= number_to_currency(transaction.deposit) %></td>
        <td><%= link_to 'Show', transaction %></td>
        <td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
        <td><%= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p>You have performed <%= @num_transactions%> transactions</p>

<%= link_to 'New Transaction', new_transaction_path %>
